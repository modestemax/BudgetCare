{
  "name": "personal-website",
  "version": "1.0.0",
  "private": true,
  "description": "Cameroon NGO budget platform monorepo",
  "workspaces": [
    "apps/web",
    "apps/mock-server"
  ],
  "scripts": {
    "dev:web": "npm run dev -w web",
    "dev:server": "npm run dev -w mock-server",
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:server\"",
    "build": "npm run build -w web",
    "lint": "npm run lint -w web",
    "test": "npm run test -w web && npm run test -w mock-server"
  },
  "keywords": [
    "vite",
    "react",
    "tailwind",
    "express",
    "ngos",
    "budget"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
